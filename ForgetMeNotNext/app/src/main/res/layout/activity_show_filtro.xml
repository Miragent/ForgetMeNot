<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zerostar.forgetmenotnext.activities.ShowFiltro">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radio_filtri">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Pianta Aromatica"
            android:id="@+id/rb_p_aro"
            android:layout_gravity="center_horizontal" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Pianta Carnivora"
            android:id="@+id/rb_p_carn"
            android:layout_gravity="center_horizontal" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Pianta Ornamentale"
            android:id="@+id/rb_p_orna"
            android:layout_gravity="center_horizontal" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Pianta Grassa"
            android:id="@+id/rb_p_grassa"
            android:layout_gravity="center_horizontal" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Pokemon Erba/Veleno"
            android:id="@+id/rb_p_pkmn"
            android:layout_gravity="center_horizontal" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Nessun filtro"
            android:id="@+id/rb_none"
            android:layout_gravity="center_horizontal" />
    </RadioGroup>

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/btn_ok"
        android:layout_below="@id/radio_filtri"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />


</RelativeLayout>
</ScrollView>