<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="true">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:id="@+id/img_foto_pianta"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="64dp" />

            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_nome_pianta"
                android:hint="Dai un nome alla tua pianta"
                android:layout_below="@+id/img_foto_pianta"
                android:layout_alignStart="@+id/img_foto_pianta"
                android:layout_marginTop="48dp" />

            <ImageButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/btn_luce"
                android:layout_marginStart="16dp"
                android:layout_below="@+id/txt_nome_pianta"
                android:layout_alignStart="@+id/img_foto_pianta"
                android:layout_marginTop="48dp" />

            <TextView
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:text="Trova un posto adatto alla tua pianta"
                android:id="@+id/label_posto"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_alignTop="@+id/btn_luce"
                android:layout_toEndOf="@+id/btn_luce"
                android:layout_marginTop="8dp" />

            <ImageButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/btn_fatto"
                android:layout_marginTop="48dp"
                android:layout_below="@+id/btn_luce"
                android:layout_toStartOf="@+id/label_posto" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Carica un avatar per la tua pianta o scatta una foto"
                android:id="@+id/l_scelta_foto"
                android:layout_alignTop="@+id/img_foto_pianta"
                android:layout_toEndOf="@+id/img_foto_pianta"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:layout_marginRight="48dp" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="36dp"
                android:id="@+id/btn_camera"
                android:layout_below="@+id/l_scelta_foto"
                android:layout_alignStart="@+id/l_scelta_foto"
                android:layout_marginLeft="8dp" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="36dp"
                android:id="@+id/btn_file"
                android:layout_below="@+id/l_scelta_foto"
                android:layout_toEndOf="@+id/btn_camera"
                android:layout_marginLeft="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fatto!"
                android:id="@+id/l_fatto"
                android:layout_marginLeft="16dp"
                android:layout_alignTop="@+id/btn_fatto"
                android:layout_alignStart="@+id/label_posto"
                android:layout_marginTop="16dp" />

        </RelativeLayout>
    </ScrollView>
