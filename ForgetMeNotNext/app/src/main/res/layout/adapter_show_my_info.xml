<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zerostar.forgetmenotnext.activities.VisualizzaPianta">

    <com.parse.ParseImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:id="@+id/img_avatar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/l_nick_pianta"
        android:layout_below="@+id/img_avatar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/l_my_descrizione"
        android:layout_below="@+id/l_info_terra"
        android:layout_alignStart="@+id/l_info_terra" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/l_tipo_my_pianta"
        android:layout_below="@+id/l_nick_pianta"
        android:layout_centerHorizontal="true" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l_tipo_my_pianta"
        android:layout_centerHorizontal="true"
        android:id="@+id/clock"
        />

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/btn_sole"
        android:layout_below="@+id/clock"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="24dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="168dp"
        android:layout_height="16dp"
        android:id="@+id/bar_sole"
        android:layout_alignTop="@+id/btn_sole"
        android:layout_toEndOf="@+id/btn_sole"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/l_sole"
        android:layout_below="@+id/bar_sole"
        android:layout_toEndOf="@+id/btn_sole"
        android:layout_marginLeft="32dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_sole"
        android:layout_below="@+id/l_scroll_sole"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/txt_info_sole" />
    </ScrollView>

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/btn_goccia"
        android:layout_below="@+id/scroll_sole"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="48dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="168dp"
        android:layout_height="16dp"
        android:id="@+id/bar_goccia"
        android:layout_below="@+id/scroll_sole"
        android:layout_toEndOf="@+id/btn_goccia"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/l_goccia"
        android:layout_below="@+id/bar_goccia"
        android:layout_toEndOf="@+id/btn_goccia"
        android:layout_marginLeft="32dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_goccia"
        android:layout_marginLeft="48dp"
        android:layout_below="@+id/l_scroll_goccia"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/txt_info_goccia"
        />
    </ScrollView>

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/btn_terra"
        android:layout_below="@+id/scroll_goccia"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="48dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="168dp"
        android:layout_height="16dp"
        android:id="@+id/bar_terra"
        android:layout_below="@+id/scroll_goccia"
        android:layout_toEndOf="@+id/btn_terra"
        android:layout_marginTop="16dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/l_terra"
        android:layout_below="@+id/bar_terra"
        android:layout_toEndOf="@+id/btn_terra"
        android:layout_marginLeft="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/l_scroll_sole"
        android:layout_below="@+id/btn_sole"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/l_scroll_goccia"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/btn_goccia"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/l_info_terra"
        android:layout_marginLeft="48dp"
        android:layout_below="@+id/btn_terra"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

</RelativeLayout>
</ScrollView>
