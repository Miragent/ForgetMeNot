<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.zerostar.forgetmenotnext.activities.ShowElimina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:background="#eeeeed">

        <TextView
            android:layout_width="256dp"
            android:layout_height="54dp"
            android:id="@+id/l_elimina"
            android:layout_centerHorizontal="true"
            android:text="Sicuro di voler eliminare questa pianta?"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp" />

        <Button
            android:layout_width="128dp"
            android:layout_height="54dp"
            android:id="@+id/btn_si_elimina"
            android:layout_below="@+id/l_elimina"
            android:layout_alignStart="@+id/l_elimina"
            android:text="Si"
            android:layout_marginTop="8dp" />

        <Button
            android:layout_width="128dp"
            android:layout_height="54dp"
            android:id="@+id/btn_no_elimina"
            android:layout_below="@+id/l_elimina"
            android:layout_toEndOf="@+id/btn_si_elimina"
            android:text="No"
            android:layout_marginTop="8dp" />

</RelativeLayout>
